#include<stdio.h>
#include<stdlib.h>

int maximumUnits(int** boxTypes,int boxTypesSize,int boxTypesColSize,int trucksize)
{
    int max,i,s=0,p,a[boxTypesSize],b[boxTypesColSize];
    for(i=0;i<boxTypesSize;i++)
    {
        a[i]=boxTypes[i][0];
        b[i]=boxTypes[i][1];
    }
    while(trucksize!=0)
    {
        for(i=0;i<boxTypesSize;i++)
        {
            max=0;
            for(i=0;i<boxTypesSize;i++)
            {
                if(max<b[i])
                {
                    max=b[i];
                    p=i;
                }
            }
            if(a[p]<=trucksize)
            {
                s=s+a[p]*max;
                b[p]=0;
                trucksize=trucksize-a[p];
            }
            else
            {
                s=s+b[p]*trucksize;
                trucksize=0;
            }
        i=boxTypesSize;
        }
    }
    return s;
}

void main()
{
    int r,c,t,i,j;
    printf("Enter the value of r c trucksize");
    scanf("%d%d%d",&r,&c,&t);
    int** arr=(int**)malloc(r*sizeof(int));
    for(i=0;i<r;i++)
    {
        arr[i]=(int*)malloc(sizeof(int));
    }
    printf("Enter the rows");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&arr[i][j]);
        }
    }
    printf("maximum total number of units: %d",maximumUnits(arr,r,c,t));
}

output:

Enter the value of r c trucksize3 2 4
Enter the rows1 3
2 2 
3 1
maximum total number of units: 8
